{
    plugin_data: {
        // Define metadata about the plugin
        slug: "dnd_fifth_edition",
        display_name: "D&D 5e",
        tags: [
            "system",
            "character_sheet",
            "character_loader",
            "npc_source",
            "npc_builder",
            "data_source",
            "assets",
        ],
        dependencies: ["d20_dice"],
    },
    entrypoints: {
        // Python files to load, mapping entrypoint name to file and objects to export
        data: {
            file: "data_source.py",
            exports: ["DataLoader5e"],
        },
    },
    data_source: {
        // Config for data source
        kwargs: {},
        source_map: "$sub:source_map.json",
        loader: ["data", "DataLoader5e"], // Data loader class entrypoint
        default_category: "class",
        categories: {
            class: {
                search_model: "class",
                display_name: "Classes",
                display_mode: "itemized",
                load: "get_class",
                search: "search_classes",
                search_fields: [
                    {
                        type: "class",
                        display_name: "Class",
                    },
                ],
                renderer: "$sub:renderers/classes/class.compendium.json",
            },
        },
    },
    assets: {
        // Mapping of asset names to asset paths
        artificer: "assets/artificer.jpeg",
        barbarian: "assets/barbarian.jpeg",
        bard: "assets/bard.jpeg",
        cleric: "assets/cleric.jpeg",
        druid: "assets/druid.jpeg",
        fighter: "assets/fighter.jpeg",
        monk: "assets/monk.jpeg",
        paladin: "assets/paladin.jpeg",
        ranger: "assets/ranger.jpeg",
        rogue: "assets/rogue.jpeg",
        sorcerer: "assets/sorcerer.jpeg",
        warlock: "assets/warlock.jpeg",
        wizard: "assets/wizard.jpeg",
    },
}
