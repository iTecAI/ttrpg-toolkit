{
    "$schema": "../../../../schema/compendium-renderer.json",
    "render_mode": "card",
    "item": {
        "title": "{{name}}",
        "subtitle": "Source: {{source}}",
        "content": {
            "type": "segments",
            "count_per_row": 1,
            "segments": [
                {
                    "icon": {
                        "group": "game",
                        "name": "GiDiceEightFacesEight"
                    },
                    "name": "Hit Die",
                    "content": "{{hit_dice}}"
                },
                {
                    "icon": {
                        "group": "material",
                        "name": "MdGroup"
                    },
                    "name": "# Subclasses",
                    "content": {
                        "text": "{{count}}",
                        "vars": {
                            "count": {
                                "type": "function",
                                "function": "(opts) => opts.subclasses.length",
                                "options": {
                                    "subclasses": "subclasses"
                                }
                            }
                        }
                    }
                },
                {
                    "icon": {
                        "group": "game",
                        "name": "GiMagicPalm"
                    },
                    "name": "Spellcasting Ability",
                    "content": {
                        "text": "{{spellcasting}}",
                        "vars": {
                            "spellcasting": {
                                "type": "function",
                                "function": "(opts) => opts.sc[0].toUpperCase() + opts.sc.slice(1)",
                                "options": {
                                    "sc": "spellcasting.ability"
                                }
                            }
                        }
                    },
                    "conditional": {
                        "function": "(opts) => Boolean(opts.spellcasting)",
                        "options": {
                            "spellcasting": "spellcasting"
                        }
                    }
                }
            ]
        }
    },
    "expanded": {
        "title": "{{name}}",
        "subtitle": "Source: {{source}}",
        "contents": [
            {
                "type": "section",
                "canExpand": true,
                "defaultExpanded": true,
                "title": "{{name}} - Proficiencies",
                "icon": {
                    "group": "material",
                    "name": "MdStar"
                },
                "items": [
                    {
                        "type": "masonry",
                        "columns": 3,
                        "spacing": 2,
                        "items": [
                            {
                                "type": "container",
                                "title": "Proficiencies: Saving Throws",
                                "variant": "outlined",
                                "conditional": {
                                    "function": "(opts) => opts.item && opts.item.length > 0",
                                    "options": {
                                        "item": "save_proficiency"
                                    }
                                },
                                "icon": {
                                    "group": "game",
                                    "name": "GiDiceTwentyFacesTwenty"
                                },
                                "items": {
                                    "type": "list",
                                    "source": "save_proficiency",
                                    "renderer": {
                                        "type": "chip",
                                        "text": {
                                            "text": "{{ability}}",
                                            "vars": {
                                                "ability": {
                                                    "type": "function",
                                                    "function": "(opts) => opts.ab[0].toUpperCase() + opts.ab.slice(1)",
                                                    "options": {
                                                        "ab": "this"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            },
                            {
                                "type": "container",
                                "title": "Proficiencies: Armor",
                                "variant": "outlined",
                                "conditional": {
                                    "function": "(opts) => opts.item && opts.item.length > 0",
                                    "options": {
                                        "item": "armor_proficiency"
                                    }
                                },
                                "icon": {
                                    "group": "game",
                                    "name": "GiArmorVest"
                                },
                                "items": {
                                    "type": "list",
                                    "source": "armor_proficiency",
                                    "renderer": {
                                        "type": "chip",
                                        "text": {
                                            "text": "{{item}}",
                                            "vars": {
                                                "item": {
                                                    "type": "function",
                                                    "function": "(opts) => opts.i[0].toUpperCase() + opts.i.slice(1)",
                                                    "options": {
                                                        "i": "this"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            },
                            {
                                "type": "container",
                                "title": "Proficiencies: Weapons",
                                "variant": "outlined",
                                "conditional": {
                                    "function": "(opts) => opts.item && opts.item.length > 0",
                                    "options": {
                                        "item": "weapon_proficiency"
                                    }
                                },
                                "icon": {
                                    "group": "game",
                                    "name": "GiBroadsword"
                                },
                                "items": {
                                    "type": "list",
                                    "source": "weapon_proficiency",
                                    "renderer": {
                                        "type": "chip",
                                        "text": {
                                            "text": "{{item}}",
                                            "vars": {
                                                "item": {
                                                    "type": "function",
                                                    "function": "(opts) => opts.i[0].toUpperCase() + opts.i.slice(1)",
                                                    "options": {
                                                        "i": "this"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            },
                            {
                                "type": "container",
                                "title": "Proficiencies: Tools/Vehicles",
                                "variant": "outlined",
                                "conditional": {
                                    "function": "(opts) => opts.item && opts.item.length > 0",
                                    "options": {
                                        "item": "tool_proficiency"
                                    }
                                },
                                "icon": {
                                    "group": "game",
                                    "name": "GiClawHammer"
                                },
                                "items": {
                                    "type": "list",
                                    "source": "tool_proficiency",
                                    "renderer": {
                                        "type": "chip",
                                        "text": {
                                            "text": "{{item}}",
                                            "vars": {
                                                "item": {
                                                    "type": "function",
                                                    "function": "(opts) => opts.i[0].toUpperCase() + opts.i.slice(1)",
                                                    "options": {
                                                        "i": "this"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            },
                            {
                                "type": "container",
                                "title": "Proficiencies: Skills",
                                "variant": "outlined",
                                "conditional": {
                                    "function": "(opts) => opts.item && opts.item.length > 0",
                                    "options": {
                                        "item": "skill_proficiency"
                                    }
                                },
                                "icon": {
                                    "group": "material",
                                    "name": "MdStar"
                                },
                                "items": {
                                    "type": "list",
                                    "source": "skill_proficiency",
                                    "renderer": {
                                        "type": "group",
                                        "items": {
                                            "type": "switch",
                                            "function": "(opts) => opts.mode === 'any' ? 'any' : 'choose'",
                                            "options": {
                                                "mode": "mode"
                                            },
                                            "output_map": {
                                                "any": [
                                                    {
                                                        "type": "text",
                                                        "variant": "body1",
                                                        "text": "Choose any {{count}} skills."
                                                    }
                                                ],
                                                "choose": [
                                                    {
                                                        "type": "container",
                                                        "title": "Choose any {{count}} of the following skills.",
                                                        "variant": "outlined",
                                                        "items": {
                                                            "type": "list",
                                                            "source": "choose_from",
                                                            "renderer": {
                                                                "type": "chip",
                                                                "text": {
                                                                    "text": "{{item}}",
                                                                    "vars": {
                                                                        "item": {
                                                                            "type": "function",
                                                                            "function": "(opts) => opts.i[0].toUpperCase() + opts.i.slice(1)",
                                                                            "options": {
                                                                                "i": "this"
                                                                            }
                                                                        }
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    }
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        ]
                    }
                ]
            },
            {
                "type": "section",
                "canExpand": true,
                "defaultExpanded": false,
                "title": "{{name}} - Multiclassing",
                "icon": {
                    "group": "material",
                    "name": "MdAccountTree"
                },
                "items": [
                    {
                        "type": "rows",
                        "spacing": 2,
                        "items": [
                            {
                                "type": "container",
                                "title": "Ability Requirements",
                                "subtitle": "One of the following is required.",
                                "variant": "outlined",
                                "items": {
                                    "type": "generator",
                                    "source": "multiclass_requirements",
                                    "function": "(source) => source.or ? Object.keys(source.or[0]).map((i) => {return {ability: i[0].toUpperCase() + i.slice(1), requiredScore: source.or[0][i]}}) : Object.keys(source).map((k) => {return {ability: k[0].toUpperCase() + k.slice(1), requiredScore: source[k]};})",
                                    "renderer": {
                                        "type": "chip",
                                        "text": "{{ability}}: {{requiredScore}}"
                                    }
                                }
                            },
                            {
                                "type": "masonry",
                                "columns": 3,
                                "spacing": 2,
                                "items": [
                                    {
                                        "type": "container",
                                        "title": "Multiclass Proficiencies: Armor",
                                        "variant": "outlined",
                                        "conditional": {
                                            "function": "(opts) => opts.item && opts.item.length > 0",
                                            "options": {
                                                "item": "multiclass_armor_proficiency"
                                            }
                                        },
                                        "icon": {
                                            "group": "game",
                                            "name": "GiArmorVest"
                                        },
                                        "items": {
                                            "type": "list",
                                            "source": "multiclass_armor_proficiency",
                                            "renderer": {
                                                "type": "chip",
                                                "text": {
                                                    "text": "{{item}}",
                                                    "vars": {
                                                        "item": {
                                                            "type": "function",
                                                            "function": "(opts) => opts.i[0].toUpperCase() + opts.i.slice(1)",
                                                            "options": {
                                                                "i": "this"
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    },
                                    {
                                        "type": "container",
                                        "title": "Multiclass Proficiencies: Weapons",
                                        "variant": "outlined",
                                        "conditional": {
                                            "function": "(opts) => opts.item && opts.item.length > 0",
                                            "options": {
                                                "item": "multiclass_weapon_proficiency"
                                            }
                                        },
                                        "icon": {
                                            "group": "game",
                                            "name": "GiBroadsword"
                                        },
                                        "items": {
                                            "type": "list",
                                            "source": "multiclass_weapon_proficiency",
                                            "renderer": {
                                                "type": "chip",
                                                "text": {
                                                    "text": "{{item}}",
                                                    "vars": {
                                                        "item": {
                                                            "type": "function",
                                                            "function": "(opts) => opts.i[0].toUpperCase() + opts.i.slice(1)",
                                                            "options": {
                                                                "i": "this"
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    },
                                    {
                                        "type": "container",
                                        "title": "Multiclass Proficiencies: Tools/Vehicles",
                                        "variant": "outlined",
                                        "conditional": {
                                            "function": "(opts) => opts.item && opts.item.length > 0",
                                            "options": {
                                                "item": "multiclass_tool_proficiency"
                                            }
                                        },
                                        "icon": {
                                            "group": "game",
                                            "name": "GiClawHammer"
                                        },
                                        "items": {
                                            "type": "list",
                                            "source": "multiclass_tool_proficiency",
                                            "renderer": {
                                                "type": "chip",
                                                "text": {
                                                    "text": "{{item}}",
                                                    "vars": {
                                                        "item": {
                                                            "type": "function",
                                                            "function": "(opts) => opts.i[0].toUpperCase() + opts.i.slice(1)",
                                                            "options": {
                                                                "i": "this"
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    },
                                    {
                                        "type": "container",
                                        "title": "Multiclass Proficiencies: Skills",
                                        "variant": "outlined",
                                        "conditional": {
                                            "function": "(opts) => opts.item && opts.item.length > 0",
                                            "options": {
                                                "item": "multiclass_skill_proficiency"
                                            }
                                        },
                                        "icon": {
                                            "group": "material",
                                            "name": "MdStar"
                                        },
                                        "items": {
                                            "type": "list",
                                            "source": "multiclass_skill_proficiency",
                                            "renderer": {
                                                "type": "group",
                                                "items": {
                                                    "type": "switch",
                                                    "function": "(opts) => opts.mode === 'any' ? 'any' : 'choose'",
                                                    "options": {
                                                        "mode": "mode"
                                                    },
                                                    "output_map": {
                                                        "any": [
                                                            {
                                                                "type": "text",
                                                                "variant": "body1",
                                                                "text": "Choose any {{count}} skills."
                                                            }
                                                        ],
                                                        "choose": [
                                                            {
                                                                "type": "container",
                                                                "title": "Choose any {{count}} of the following skills.",
                                                                "variant": "outlined",
                                                                "items": {
                                                                    "type": "list",
                                                                    "source": "choose_from",
                                                                    "renderer": {
                                                                        "type": "chip",
                                                                        "text": {
                                                                            "text": "{{item}}",
                                                                            "vars": {
                                                                                "item": {
                                                                                    "type": "function",
                                                                                    "function": "(opts) => opts.i[0].toUpperCase() + opts.i.slice(1)",
                                                                                    "options": {
                                                                                        "i": "this"
                                                                                    }
                                                                                }
                                                                            }
                                                                        }
                                                                    }
                                                                }
                                                            }
                                                        ]
                                                    }
                                                }
                                            }
                                        }
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "type": "section",
                "canExpand": true,
                "defaultExpanded": false,
                "title": "{{name}} - Flavor Text",
                "icon": {
                    "group": "material",
                    "name": "MdBook"
                },
                "items": [
                    {
                        "type": "markdown",
                        "text_source": "fluff"
                    }
                ],
                "max_height": 350,
                "conditional": {
                    "function": "(opts) => opts.fluff ? opts.fluff.length > 0 : false",
                    "options": {
                        "fluff": "fluff"
                    }
                }
            }
        ]
    }
}
