{
    "type": "section",
    "canExpand": true,
    "defaultExpanded": false,
    "title": "{{name}} - Spellcasting",
    "icon": {
        "group": "material",
        "name": "MdFlare"
    },
    "items": [
        {
            "type": "rows",
            "spacing": 2,
            "items": [
                {
                    "type": "markdown",
                    "text": {
                        "text": "**Spellcasting Ability:** {{sp_ability}}",
                        "vars": {
                            "sp_ability": {
                                "type": "function",
                                "function": "(opts) => opts.sc[0].toUpperCase() + opts.sc.slice(1)",
                                "options": {
                                    "sc": "spellcasting.ability"
                                }
                            }
                        }
                    }
                },
                {
                    "type": "table",
                    "title": "Spell Slots/Cantrips",
                    "max_height": 300,
                    "columnOrder": [
                        "name",
                        "L0",
                        "L1",
                        "L3",
                        "L4",
                        "L5",
                        "L6",
                        "L7",
                        "L8",
                        "L9"
                    ],
                    "headers": {
                        "name": "Level",
                        "L0": "Cantrips Known",
                        "L1": "1st",
                        "L2": "2nd",
                        "L3": "3rd",
                        "L4": "4th",
                        "L5": "5th",
                        "L6": "6th",
                        "L7": "7th",
                        "L8": "8th",
                        "L9": "9th"
                    },
                    "rows": {
                        "function": "$file:functions/parseSpellSlots.js:lines",
                        "options": {
                            "spellcasting": "spellcasting"
                        }
                    }
                }
            ]
        }
    ],
    "conditional": {
        "function": "(opts) => Boolean(opts.sp)",
        "options": {
            "sp": "spellcasting"
        }
    }
}
