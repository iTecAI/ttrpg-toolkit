{
    "render_mode": "card",
    "item": {
        "title": "{{name}}",
        "subtitle": "Source: {{source}}",
        "content": {
            "type": "segments",
            "count_per_row": 1,
            "segments": [
                {
                    "icon": {
                        "group": "game",
                        "name": "GiDiceEightFacesEight"
                    },
                    "name": "Hit Die",
                    "content": "{{hit_dice}}"
                },
                {
                    "icon": {
                        "group": "material",
                        "name": "MdGroup"
                    },
                    "name": "# Subclasses",
                    "content": {
                        "text": "{{count}}",
                        "vars": {
                            "count": {
                                "type": "function",
                                "function": "(opts) => opts.subclasses.length",
                                "options": {
                                    "subclasses": "subclasses"
                                }
                            }
                        }
                    }
                },
                {
                    "icon": {
                        "group": "game",
                        "name": "GiMagicPalm"
                    },
                    "name": "Spellcasting Ability",
                    "content": {
                        "text": "{{spellcasting}}",
                        "vars": {
                            "spellcasting": {
                                "type": "function",
                                "function": "(opts) => opts.sc[0].toUpperCase() + opts.sc.slice(1)",
                                "options": {
                                    "sc": "spellcasting.ability"
                                }
                            }
                        }
                    },
                    "conditional": {
                        "function": "(opts) => Boolean(opts.spellcasting)",
                        "options": {
                            "spellcasting": "spellcasting"
                        }
                    }
                }
            ]
        }
    },
    "expanded": {
        "title": "{{name}}",
        "subtitle": "Source: {{source}}",
        "contents": [
            "$sub:class-profs.modular.json",
            "$sub:class-multi-profs.modular.json",
            {
                "type": "columns",
                "spacing": 2,
                "items": [
                    "$sub:class-spellcasting.modular.json",
                    "$sub:class-starting-equipment.modular.json"
                ]
            },
            {
                "type": "section",
                "canExpand": true,
                "defaultExpanded": false,
                "title": "{{name}} - Flavor Text",
                "icon": {
                    "group": "material",
                    "name": "MdBook"
                },
                "items": [
                    {
                        "type": "markdown",
                        "text_source": "fluff"
                    }
                ],
                "max_height": 350,
                "conditional": {
                    "function": "(opts) => opts.fluff ? opts.fluff.length > 0 : false",
                    "options": {
                        "fluff": "fluff"
                    }
                }
            },
            "$sub:class-features.modular.json",
            "$sub:class-subclasses.modular.json"
        ]
    }
}
